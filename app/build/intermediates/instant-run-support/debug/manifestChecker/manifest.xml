<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smart.ccc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity
            android:name="smart.ccc.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="smart.ccc.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="smart.ccc.main"
            android:screenOrientation="portrait" />
        <activity
            android:name="smart.ccc.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="smart.ccc.SendArticleActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.foamtrace.photopicker.PhotoPickerActivity" />
        <activity
            android:name="smart.ccc.ClassifyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.foamtrace.photopicker.PhotoPreviewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="smart.ccc.CommentActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="smart.ccc.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="smart.ccc">

    <application
        android:allowBackup="true"
        android:name="org.litepal.LitePalApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>
        <activity android:name=".DetailActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".main"
                  android:screenOrientation="portrait"/>
        <activity android:name=".RegisterActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".SendArticleActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.foamtrace.photopicker.PhotoPickerActivity"/>
        <activity android:name=".ClassifyActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.foamtrace.photopicker.PhotoPreviewActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".CommentActivity"
                  android:screenOrientation="portrait"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>